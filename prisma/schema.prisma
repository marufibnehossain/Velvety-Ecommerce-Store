generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  role          String?   @default("CUSTOMER") // CUSTOMER | ADMIN
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  VerificationToken   VerificationToken[]
  PasswordResetToken  PasswordResetToken[]
  addresses           Address[]
  wishlistItems       WishlistItem[]
}

model Address {
  id        String   @id @default(cuid())
  userId    String
  label     String?  // e.g. "Home", "Office"
  address   String
  city      String
  zip       String
  country   String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(cuid())
  token      String   @unique
  userId     String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Coupon {
  id            String    @id @default(cuid())
  code          String    @unique
  type          String    // PERCENT | FIXED
  value         Int       // PERCENT: 1-100, FIXED: amount in cents
  minOrderCents Int?      // optional minimum order in cents
  maxUses       Int?      // null = unlimited uses
  usedCount     Int       @default(0)
  expiresAt     DateTime?
  createdAt     DateTime  @default(now())
}

model Order {
  id               String   @id @default(cuid())
  email            String
  name             String?
  address          String
  city             String
  zip              String
  country          String
  subtotalCents    Int
  discountCents    Int      @default(0)
  shippingCents    Int
  totalCents       Int
  couponCode       String?
  status           String   @default("PENDING") // PENDING | PAID | SHIPPED | CANCELLED
  trackingNumber   String?  // carrier tracking
  trackingCarrier  String?  // e.g. USPS, FedEx
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  items OrderItem[]
}

model OrderItem {
  id             String  @id @default(cuid())
  orderId        String
  productId      String
  name           String
  priceCents     Int
  quantity       Int
  variationId    String? // ProductVariation id if item is a variation
  variationLabel String? // e.g. "Size: M, Color: Red" for display
  order          Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Category {
  id   String @id @default(cuid())
  name String
  slug String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
}

model Product {
  id          String   @id @default(cuid())
  slug        String   @unique
  productCode String?
  name        String
  priceCents  Int      // price in cents (base price, can be overridden by variations)
  compareAtCents Int?  // compareAt price in cents
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  images      String   // JSON array of image URLs (default images)
  categoryId  String
  tags        String   // JSON array of tag strings
  shortDesc   String
  longDesc    String?
  ingredients String?
  howToUse    String?
  stock           Int      @default(0) // base stock (used when trackInventory is true)
  trackInventory  Boolean  @default(true) // false = unlimited stock, true = use stock field
  badge           String?  // NEW | BESTSELLER | null
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  category    Category          @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  attributes  ProductAttribute[]
  variations  ProductVariation[]
  reviews     Review[]
}

model ProductAttribute {
  id        String   @id @default(cuid())
  productId String
  name      String   // e.g., "Size", "Color"
  values    String   // JSON array of possible values, e.g., ["Small", "Medium", "Large"]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductVariation {
  id          String   @id @default(cuid())
  productId   String
  attributes  String   // JSON object mapping attribute names to values, e.g., {"Size": "Small", "Color": "Red"}
  priceCents  Int?     // Optional override price (if null, uses product base price)
  stock       Int      @default(0)
  sku         String?  // Optional SKU for this variation
  images      String?  // Optional JSON array of images specific to this variation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Review {
  id        String   @id @default(cuid())
  productId String
  userId    String?
  authorName String
  rating    Int      // 1-5
  body      String?
  status    String   @default("APPROVED") // APPROVED | PENDING | HIDDEN
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())
}

model WishlistItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}
